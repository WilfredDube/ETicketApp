<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/payment_rectangle">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textDropPaid"
            android:layout_below="@+id/textView12"
            android:text="Dete Station"
            android:textColor="#5A5656" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textDropPaid"
            android:layout_alignTop="@+id/textView13"
            android:text="Hwange"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textSourcePaid"
            android:layout_marginBottom="108dp"
            android:text="Bulawayo"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textSourcePaid"
            android:layout_alignTop="@+id/textView8"
            android:text="Mpopoma Station"
            android:textColor="#5A5656" />

        <TextView
            android:id="@+id/textTicketDetails2"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:text="DEPARTING AT 1800 PM,  Monday 16 February Blue Train Sleeper :  Seats - 2A, 2B 2 passengers"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#5A5656"
            android:textSize="11sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/textView8"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/from_arrow" />

        <TextView
            android:id="@+id/textDropPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textSourcePaid"
            android:layout_marginEnd="40dp"
            android:text="Dete Station"
            android:textColor="#5A5656" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textDropPaid"
            android:layout_alignTop="@+id/textSourcePaid"
            android:text="Hwange"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textSourcePaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/paidQRcode"
            android:layout_marginStart="40dp"
            android:text="Bulawayo"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textSourcePaid"
            android:layout_below="@+id/textSourcePaid"
            android:text="Mpopoma Station"
            android:textColor="#5A5656" />

        <ImageView
            android:id="@+id/paidQRcode"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/qrcode" />

        <TextView
            android:id="@+id/textTicketDetails"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="136dp"
            android:text="DEPARTING AT 1800 PM,  Monday 16 February Blue Train Sleeper :  Seats - 2A, 2B 2 passengers"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#5A5656"
            android:textSize="11sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/textDropPaid"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/to_arrow" />
    </RelativeLayout>
</merge>
